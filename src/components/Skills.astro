---
import { Marquee } from "@/components/magicui/marquee";

const frontendSkills = [
  { name: "JavaScript", icon: "devicon-javascript-plain" },
  { name: "TypeScript", icon: "devicon-typescript-plain" },
  { name: "React", icon: "devicon-react-plain" },
  { name: "Nextjs", icon: "devicon-nextjs-plain" },
  { name: "Tailwind CSS", icon: "devicon-tailwindcss-plain" },
  { name: "Svelte", icon: "devicon-svelte-plain" },
  { name: "Astro", icon: "devicon-astro-plain" },
];

const backendSkills = [
  { name: "Node.js", icon: "devicon-nodejs-plain" },
  { name: "Express", icon: "devicon-express-original" },
  { name: "Nestjs", icon: "devicon-nestjs-plain" },
  { name: "Adonisjs", icon: "devicon-adonisjs-plain" },
  { name: "Golang", icon: "devicon-go-plain" },
  { name: "PostgreSQL", icon: "devicon-postgresql-plain" },
  { name: "Supabase", icon: "devicon-supabase-plain" },
  { name: "Docker", icon: "devicon-docker-plain" },
  { name: "Cypress", icon: "devicon-cypressio-plain" },
];
---

<section class="section-spacing bg-neutral-100/50 dark:bg-neutral-800/50">
  <div class="container-custom">
    <h2 class="text-2xl sm:text-3xl font-semibold mb-10">What I Work With</h2>

    <div class="space-y-7">
      <Marquee pauseOnHover class="[--duration:20s]">
        {
          frontendSkills.map((skill) => (
            <div class="flex flex-col items-center p-4 mx-4 rounded-lg transition-colors">
              <i
                class={`${skill.icon} text-4xl mb-3 text-neutral-900 dark:text-white colored`}
              />
              <span class="text-sm font-medium">{skill.name}</span>
            </div>
          ))
        }
      </Marquee>

      <Marquee pauseOnHover reverse class="[--duration:25s]">
        {
          backendSkills.map((skill) => (
            <div class="flex flex-col items-center p-4 mx-4 rounded-lg transition-colors">
              <i
                class={`${skill.icon} text-4xl mb-3 text-neutral-900 dark:text-white colored`}
              />
              <span class="text-sm font-medium">{skill.name}</span>
            </div>
          ))
        }
      </Marquee>
    </div>
  </div>
</section>
