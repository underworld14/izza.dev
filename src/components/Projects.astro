---
const projects = [
  {
    title: "LuminaPDF",
    description: "SaaS platform providing PDF and screenshot generation APIs from HTML/web content. Currently in beta testing.",
    tags: ["NestJS", "SvelteKit", "Supabase", "Puppeteer"],
    link: "https://staging.luminapdf.xyz"
  },
  {
    title: "Utarakan.id",
    description: "Anonymous confession platform with over 600 users, integrating modern web technologies and payment processing.",
    tags: ["SvelteKit", "Supabase", "TWA", "Mayar Payment"],
    link: "https://utarakan.id"
  },
  {
    title: "Carecrypto",
    description: "Crypto community platform for users in Seoul with membership-based access to premium content.",
    tags: ["Next.js", "Express.js", "MongoDB", "AWS"],
    link: "https://carecrypto.com"
  },
  {
    title: "Adhyaksamart Voucher",
    description: "Digital voucher management system for Adhyaksamart members in Yogyakarta; manages 1,000+ vouchers monthly.",
    tags: ["SvelteKit", "SQLite"],
    link: "https://adhyaksamart.my.id"
  }
];
---

<section class="section-spacing container-custom">
  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4 mb-10">
    <h2 class="text-2xl sm:text-3xl font-semibold">Projects</h2>
    <a href="/projects" class="btn btn-secondary">View all projects</a>
  </div>
  
  <div class="grid gap-8 md:grid-cols-2">
    {projects.map(project => (
      <div class="group relative overflow-hidden rounded-lg border border-neutral-200 bg-white p-6 transition-all hover:shadow-md dark:border-neutral-800 dark:bg-neutral-900">
        <div class="space-y-4">
          <h3 class="text-xl font-medium">{project.title}</h3>
          <p class="text-neutral-600 dark:text-neutral-400">{project.description}</p>
          
          <div class="flex flex-wrap gap-2">
            {project.tags.map(tag => (
              <span class="inline-flex items-center rounded-full bg-neutral-100 px-2.5 py-0.5 text-xs font-medium text-neutral-800 dark:bg-neutral-800 dark:text-neutral-300">
                {tag}
              </span>
            ))}
          </div>
        </div>
        
        <a href={project.link} class="absolute inset-0" target="_blank" rel="noopener noreferrer">
          <span class="sr-only">View {project.title}</span>
        </a>
      </div>
    ))}
  </div>
</section>
