          <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-1">
            <h3 class="text-xl font-medium">{exp.company}</h3>
            <span class="text-sm text-neutral-600 dark:text-neutral-400">{exp.period}</span>
          </div>
          
          <p class="text-neutral-700 dark:text-neutral-300 font-medium">{exp.position}</p>
          <p class="text-neutral-600 dark:text-neutral-400">{exp.description}</p>
