---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';

const projects = [
  {
    title: "Project One",
    description: "A modern web application built with Astro and Tailwind CSS showcasing minimalist design principles and elegant user interfaces for content-focused websites.",
    tags: ["Astro", "Tailwind CSS", "TypeScript"],
    image: "/projects/project1.jpg", // You can replace with actual images later
    link: "https://github.com/yourusername/project-one",
    featured: true
  },
  {
    title: "Project Two",
    description: "An interactive dashboard for visualizing data with elegant transitions and responsive layouts. Built with modern web technologies for optimal performance.",
    tags: ["React", "D3.js", "Tailwind CSS"],
    image: "/projects/project2.jpg",
    link: "https://github.com/yourusername/project-two",
    featured: true
  },
  {
    title: "Project Three",
    description: "A minimalist e-commerce template with a focus on typography and white space. Designed for small businesses looking for an elegant online presence.",
    tags: ["Astro", "Tailwind CSS", "JavaScript"],
    image: "/projects/project3.jpg",
    link: "https://github.com/yourusername/project-three"
  },
  {
    title: "Project Four",
    description: "A personal blog template with a clean, readable design and excellent typography. Features dark mode, responsive images, and fast page loads.",
    tags: ["Astro", "Markdown", "Tailwind CSS"],
    image: "/projects/project4.jpg",
    link: "https://github.com/yourusername/project-four"
  },
  {
    title: "Project Five",
    description: "A portfolio website template designed for photographers and visual artists. Emphasizes large imagery and minimal navigation.",
    tags: ["JavaScript", "CSS", "HTML"],
    image: "/projects/project5.jpg",
    link: "https://github.com/yourusername/project-five"
  },
  {
    title: "Project Six",
    description: "A weather application with elegant animations and a minimalist interface. Provides current conditions and forecasts with beautiful visualizations.",
    tags: ["React", "API Integration", "CSS"],
    image: "/projects/project6.jpg", 
    link: "https://github.com/yourusername/project-six"
  }
];

const featuredProjects = projects.filter(project => project.featured);
const otherProjects = projects.filter(project => !project.featured);
---

<Layout 
  title="Projects | Izza Dev"
  description="Explore Izza Dev's projects showcasing web development skills and design aesthetics."
>
  <Navbar />
  
  <main>
    <section class="section-spacing container-custom">
      <h1 class="text-4xl font-bold mb-10">Projects</h1>
      
      <div class="mb-16">
        <h2 class="text-2xl font-semibold mb-6">Featured Projects</h2>
        
        <div class="grid gap-8 md:grid-cols-2">
          {featuredProjects.map(project => (
            <div class="group overflow-hidden rounded-lg border border-neutral-200 bg-white transition-all hover:shadow-md dark:border-neutral-800 dark:bg-neutral-900">
              <div class="aspect-video w-full bg-neutral-100 dark:bg-neutral-800 overflow-hidden">
                <div class="h-full w-full bg-gradient-to-br from-blue-500/20 to-purple-600/20 flex items-center justify-center">
                  <span class="text-neutral-500 dark:text-neutral-400 text-lg">[Project Image]</span>
                </div>
              </div>
              
              <div class="p-6 space-y-4">
                <h3 class="text-xl font-medium group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors">
                  {project.title}
                </h3>
                
                <p class="text-neutral-600 dark:text-neutral-400">{project.description}</p>
                
                <div class="flex flex-wrap gap-2 pt-2">
                  {project.tags.map(tag => (
                    <span class="inline-flex items-center rounded-full bg-neutral-100 px-2.5 py-0.5 text-xs font-medium text-neutral-800 dark:bg-neutral-800 dark:text-neutral-300">
                      {tag}
                    </span>
                  ))}
                </div>
                
                <div class="pt-4">
                  <a href={project.link} class="text-blue-600 dark:text-blue-400 font-medium hover:underline inline-flex items-center gap-1" target="_blank" rel="noopener noreferrer">
                    View Project
                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="h-4 w-4">
                      <path d="M7 7h10v10"></path>
                      <path d="M7 17 17 7"></path>
                    </svg>
                  </a>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
      
      <div>
        <h2 class="text-2xl font-semibold mb-6">Other Projects</h2>
        
        <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
          {otherProjects.map(project => (
            <div class="group relative overflow-hidden rounded-lg border border-neutral-200 bg-white p-6 transition-all hover:shadow-md dark:border-neutral-800 dark:bg-neutral-900">
              <div class="space-y-4">
                <h3 class="text-lg font-medium">{project.title}</h3>
                <p class="text-sm text-neutral-600 dark:text-neutral-400">{project.description}</p>
                
                <div class="flex flex-wrap gap-2">
                  {project.tags.map(tag => (
                    <span class="inline-flex items-center rounded-full bg-neutral-100 px-2 py-0.5 text-xs font-medium text-neutral-800 dark:bg-neutral-800 dark:text-neutral-300">
                      {tag}
                    </span>
                  ))}
                </div>
              </div>
              
              <a href={project.link} class="absolute inset-0" target="_blank" rel="noopener noreferrer">
                <span class="sr-only">View {project.title}</span>
              </a>
            </div>
          ))}
        </div>
      </div>
    </section>
  </main>
  
  <Footer />
</Layout>
