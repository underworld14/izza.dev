---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import { Image } from 'astro:assets';

import luminapdfImg from '@/assets/projects/luminapdf.png';
import utarakanImg from '@/assets/projects/utarakan.png';
import carecryptoImg from '@/assets/projects/carecrypto.png';
import adhyaksamartImg from '@/assets/projects/adhyaksamart.png';

const projects = [
  {
    title: "LuminaPDF",
    description: "SaaS platform providing PDF and screenshot generation APIs from HTML/web content. Currently in beta testing.",
    tags: ["NestJS", "SvelteKit", "Supabase", "Puppeteer"],
    link: "https://staging.luminapdf.xyz",
    image: luminapdfImg,
    featured: true
  },
  {
    title: "Utarakan.id",
    description: "Anonymous confession platform with over 600 users, integrating modern web technologies and payment processing.",
    tags: ["SvelteKit", "Supabase", "TWA", "Mayar Payment"],
    link: "https://utarakan.id",
    image: utarakanImg,
    featured: true
  },
  {
    title: "Carecrypto",
    description: "Crypto community platform for users in Seoul with membership-based access to premium content.",
    tags: ["Next.js", "Express.js", "MongoDB", "AWS"],
    link: "https://carecrypto.com",
    image: carecryptoImg
  },
  {
    title: "Adhyaksamart Voucher",
    description: "Digital voucher management system for Adhyaksamart members in Yogyakarta; manages 1,000+ vouchers monthly.",
    tags: ["SvelteKit", "SQLite"],
    link: "https://adhyaksamart.my.id",
    image: adhyaksamartImg
  },
  {
    title: "Sharekorean",
    description: "Job portal for Korean residents in the U.S., offering specialized employment opportunities and resources.",
    tags: ["Next.js", "Express.js", "MongoDB", "DigitalOcean"],
    link: "https://sharekorean.com",
    image: luminapdfImg // Replace with actual image when available
  },
  {
    title: "Abqory Sharia",
    description: "Islamic economic education company offering courses and events for specialized knowledge sharing.",
    tags: ["Next.js", "Strapi"],
    link: "https://abqorysharia.com",
    image: carecryptoImg // Replace with actual image when available
  }
];

const featuredProjects = projects.filter(project => project.featured);
const otherProjects = projects.filter(project => !project.featured);
---

<Layout 
  title="Projects | Izza Dev"
  description="Explore Izza Dev's projects showcasing web development skills and design aesthetics."
>
  <Navbar />
  
  <main>
    <section class="section-spacing container-custom">
      <h1 class="text-4xl font-bold mb-10">Projects</h1>
      
      <div class="mb-16">
        <h2 class="text-2xl font-semibold mb-6">Featured Projects</h2>
        
        <div class="grid gap-8 md:grid-cols-2">
          {featuredProjects.map(project => (
            <div class="group overflow-hidden rounded-lg border border-neutral-200 bg-white transition-all hover:shadow-md dark:border-neutral-800 dark:bg-neutral-900">
              <div class="aspect-video w-full overflow-hidden">
                <Image
                  src={project.image}
                  alt={project.title}
                  class="w-full aspect-video object-cover"
                />
              </div>
              
              <div class="p-6 space-y-4">
                <h3 class="text-xl font-medium group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors">
                  {project.title}
                </h3>
                
                <p class="text-neutral-600 dark:text-neutral-400">{project.description}</p>
                
                <div class="flex flex-wrap gap-2 pt-2">
                  {project.tags.map(tag => (
                    <span class="inline-flex items-center rounded-full bg-neutral-100 px-2.5 py-0.5 text-xs font-medium text-neutral-800 dark:bg-neutral-800 dark:text-neutral-300">
                      {tag}
                    </span>
                  ))}
                </div>
                
                <div class="pt-4">
                  <a href={project.link} class="text-blue-600 dark:text-blue-400 font-medium hover:underline inline-flex items-center gap-1" target="_blank" rel="noopener noreferrer">
                    View Project
                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="h-4 w-4">
                      <path d="M7 7h10v10"></path>
                      <path d="M7 17 17 7"></path>
                    </svg>
                  </a>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
      
      <div>
        <h2 class="text-2xl font-semibold mb-6">Other Projects</h2>
        
        <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
          {otherProjects.map(project => (
            <div class="group relative overflow-hidden rounded-lg border border-neutral-200 bg-white transition-all hover:shadow-md dark:border-neutral-800 dark:bg-neutral-900">
              <div class="aspect-video w-full overflow-hidden">
                <Image
                  src={project.image}
                  alt={project.title}
                  class="w-full aspect-video object-cover"
                />
              </div>
              
              <div class="space-y-4 p-6">
                <h3 class="text-lg font-medium">{project.title}</h3>
                <p class="text-sm text-neutral-600 dark:text-neutral-400">{project.description}</p>
                
                <div class="flex flex-wrap gap-2">
                  {project.tags.map(tag => (
                    <span class="inline-flex items-center rounded-full bg-neutral-100 px-2 py-0.5 text-xs font-medium text-neutral-800 dark:bg-neutral-800 dark:text-neutral-300">
                      {tag}
                    </span>
                  ))}
                </div>
              </div>
              
              <a href={project.link} class="absolute inset-0" target="_blank" rel="noopener noreferrer">
                <span class="sr-only">View {project.title}</span>
              </a>
              
            </div>
          ))}
        </div>
      </div>
    </section>
  </main>
  
  <Footer />
</Layout>
