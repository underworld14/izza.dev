---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';

const experiences = [
  {
    company: "Company Name",
    position: "Senior Developer",
    period: "Jan 2023 - Present",
    location: "City, Country",
    description: "Led development of key features for enterprise applications, implemented responsive design patterns, and mentored junior developers on best practices.",
    achievements: [
      "Improved application performance by 30% through code optimization",
      "Implemented CI/CD pipeline reducing deployment time by 50%",
      "Mentored 5 junior developers who have since been promoted"
    ]
  },
  {
    company: "Previous Company",
    position: "Web Developer",
    period: "Mar 2021 - Dec 2022",
    location: "City, Country",
    description: "Developed and maintained client websites, created custom components, and improved site performance through optimization techniques.",
    achievements: [
      "Built responsive websites for 15+ clients across various industries",
      "Reduced page load times by 40% through performance optimization",
      "Implemented accessibility improvements across all client projects"
    ]
  },
  {
    company: "First Company",
    position: "Junior Developer",
    period: "Jun 2020 - Feb 2021",
    location: "City, Country",
    description: "Assisted in front-end development tasks, collaborated with the design team, and implemented UI components using modern frameworks.",
    achievements: [
      "Contributed to the development of the company's component library",
      "Collaborated with designers to implement pixel-perfect interfaces",
      "Participated in code reviews and improved development practices"
    ]
  }
];

const education = [
  {
    institution: "University Name",
    degree: "Bachelor's in Computer Science",
    period: "2016 - 2020",
    description: "Focused on web development, data structures, and algorithms. Participated in coding competitions and hackathons."
  }
];

const skills = {
  technical: ["JavaScript", "TypeScript", "React", "Astro", "Tailwind CSS", "Node.js", "Git"],
  soft: ["Problem Solving", "Communication", "Team Collaboration", "Time Management", "Adaptability"]
};
---

<Layout 
  title="Experience | Izza Dev"
  description="Professional experience, skills, and background of Izza Dev."
>
  <Navbar />
  
  <main>
    <section class="section-spacing container-custom">
      <h1 class="text-4xl font-bold mb-10">Experience</h1>
      
      <div class="grid gap-12 lg:grid-cols-3">
        <div class="lg:col-span-2">
          <h2 class="text-2xl font-semibold mb-6">Work History</h2>
          
          <div class="space-y-12">
            {experiences.map((job, index) => (
              <div class="relative pl-8 before:absolute before:left-0 before:top-0 before:h-full before:w-px before:bg-neutral-200 dark:before:bg-neutral-800">
                <div class="absolute left-0 top-1 h-4 w-4 -translate-x-1/2 rounded-full border-2 border-neutral-200 bg-white dark:border-neutral-700 dark:bg-neutral-900"></div>
                
                <div class="space-y-3">
                  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-1">
                    <h3 class="text-xl font-medium">{job.company}</h3>
                    <span class="text-sm text-neutral-600 dark:text-neutral-400">{job.period}</span>
                  </div>
                  
                  <div class="flex flex-col sm:flex-row sm:items-center gap-2 text-neutral-700 dark:text-neutral-300">
                    <span class="font-medium">{job.position}</span>
                    <span class="hidden sm:inline text-neutral-400">â€¢</span>
                    <span>{job.location}</span>
                  </div>
                  
                  <p class="text-neutral-600 dark:text-neutral-400">{job.description}</p>
                  
                  <div class="pt-2">
                    <h4 class="text-sm font-semibold mb-2">Key Achievements:</h4>
                    <ul class="list-disc list-inside space-y-1 text-neutral-600 dark:text-neutral-400">
                      {job.achievements.map(achievement => (
                        <li>{achievement}</li>
                      ))}
                    </ul>
                  </div>
                </div>
              </div>
            ))}
          </div>
          
          <h2 class="text-2xl font-semibold mt-16 mb-6">Education</h2>
          
          <div class="space-y-6">
            {education.map(edu => (
              <div class="relative pl-8 before:absolute before:left-0 before:top-0 before:h-full before:w-px before:bg-neutral-200 dark:before:bg-neutral-800">
                <div class="absolute left-0 top-1 h-4 w-4 -translate-x-1/2 rounded-full border-2 border-neutral-200 bg-white dark:border-neutral-700 dark:bg-neutral-900"></div>
                
                <div class="space-y-2">
                  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-1">
                    <h3 class="text-xl font-medium">{edu.institution}</h3>
                    <span class="text-sm text-neutral-600 dark:text-neutral-400">{edu.period}</span>
                  </div>
                  
                  <p class="font-medium text-neutral-700 dark:text-neutral-300">{edu.degree}</p>
                  <p class="text-neutral-600 dark:text-neutral-400">{edu.description}</p>
                </div>
              </div>
            ))}
          </div>
        </div>
        
        <div class="space-y-8">
          <div class="rounded-lg border border-neutral-200 p-6 dark:border-neutral-800">
            <h2 class="text-xl font-semibold mb-4">Technical Skills</h2>
            
            <div class="flex flex-wrap gap-2">
              {skills.technical.map(skill => (
                <span class="inline-flex items-center rounded-full bg-blue-50 px-3 py-1 text-sm font-medium text-blue-700 dark:bg-blue-900/20 dark:text-blue-300">
                  {skill}
                </span>
              ))}
            </div>
          </div>
          
          <div class="rounded-lg border border-neutral-200 p-6 dark:border-neutral-800">
            <h2 class="text-xl font-semibold mb-4">Soft Skills</h2>
            
            <div class="flex flex-wrap gap-2">
              {skills.soft.map(skill => (
                <span class="inline-flex items-center rounded-full bg-purple-50 px-3 py-1 text-sm font-medium text-purple-700 dark:bg-purple-900/20 dark:text-purple-300">
                  {skill}
                </span>
              ))}
            </div>
          </div>
          
          <div class="rounded-lg border border-neutral-200 p-6 dark:border-neutral-800">
            <h2 class="text-xl font-semibold mb-4">Download Resume</h2>
            <p class="text-neutral-600 dark:text-neutral-400 mb-4">Get a copy of my full resume in PDF format.</p>
            
            <a href="#" class="btn btn-primary w-full flex justify-center gap-2">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="h-5 w-5">
                <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
                <polyline points="7 10 12 15 17 10"></polyline>
                <line x1="12" y1="15" x2="12" y2="3"></line>
              </svg>
              Download Resume
            </a>
          </div>
        </div>
      </div>
    </section>
  </main>
  
  <Footer />
</Layout>
