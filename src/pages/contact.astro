---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import Mail from "@lucide/astro/icons/mail";
---

<Layout
  title="Contact | Izza Dev"
  description="Get in touch with Izza Dev for collaborations, questions, or just to say hello."
>
  <Navbar />

  <main>
    <section class="section-spacing container-custom">
      <h1 class="text-4xl font-bold mb-6">Get in Touch</h1>

      <div class="grid gap-10 lg:grid-cols-2">
        <div>
          <p class="text-lg text-neutral-700 dark:text-neutral-300 mb-8">
            Have a question, project idea, or just want to say hello? I'd love
            to hear from you. Fill out the form and I'll get back to you as soon
            as possible.
          </p>

          <div class="space-y-6">
            <div class="flex items-start gap-4">
              <div class="rounded-full bg-blue-100 p-3 dark:bg-blue-900/20">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="24"
                  height="24"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  class="h-5 w-5 text-blue-600 dark:text-blue-400"
                >
                  <path
                    d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"
                  ></path>
                </svg>
              </div>
              <div>
                <h2 class="text-lg font-medium">Phone</h2>
                <p class="text-neutral-600 dark:text-neutral-400">
                  0851-7244-1406
                </p>
              </div>
            </div>

            <div class="flex items-start gap-4">
              <div class="rounded-full bg-green-100 p-3 dark:bg-green-900/20">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="24"
                  height="24"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  class="h-5 w-5 text-green-600 dark:text-green-400"
                >
                  <rect width="20" height="16" x="2" y="4" rx="2"></rect>
                  <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"></path>
                </svg>
              </div>
              <div>
                <h2 class="text-lg font-medium">Email</h2>
                <p class="text-neutral-600 dark:text-neutral-400">
                  <a
                    href="mailto:yusril@izza.dev"
                    class="underline hover:text-blue-700 dark:hover:text-blue-400"
                    >izzasrv@gmail.com</a
                  >
                </p>
              </div>
            </div>

            <div class="flex items-start gap-4">
              <div class="rounded-full bg-purple-100 p-3 dark:bg-purple-900/20">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="24"
                  height="24"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  class="h-5 w-5 text-purple-600 dark:text-purple-400"
                >
                  <path d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z"
                  ></path>
                  <circle cx="12" cy="10" r="3"></circle>
                </svg>
              </div>
              <div>
                <h2 class="text-lg font-medium">Location</h2>
                <p class="text-neutral-600 dark:text-neutral-400">
                  Yogyakarta, Indonesia
                </p>
              </div>
            </div>
          </div>

          <div class="mt-10">
            <h2 class="text-xl font-semibold mb-4">Connect with me</h2>
            <div class="flex items-center gap-4">
              <a
                href="https://github.com/underworld14"
                target="_blank"
                rel="noopener noreferrer"
                class="text-neutral-700 hover:text-primary dark:text-neutral-400 dark:hover:text-primary"
              >
                <span class="sr-only">GitHub</span>
                <i class="text-2xl devicon-github-original"></i>
              </a>
              <a
                href="https://linkedin.com/in/izza-srv"
                target="_blank"
                rel="noopener noreferrer"
                class="text-neutral-700 hover:text-primary dark:text-neutral-400 dark:hover:text-primary"
              >
                <span class="sr-only">LinkedIn</span>
                <i class="text-2xl devicon-linkedin-plain"></i>
              </a>
              <a
                href="mailto:yusril@izza.dev"
                target="_blank"
                rel="noopener noreferrer"
                class="text-neutral-600 hover:text-neutral-900 dark:text-neutral-400 dark:hover:text-white"
              >
                <span class="sr-only">Email</span>
                <Mail size={24} />
              </a>
              <a
                href="https://x.com/underworld146"
                target="_blank"
                rel="noopener noreferrer"
                class="text-neutral-600 hover:text-neutral-900 dark:text-neutral-400 dark:hover:text-white"
              >
                <span class="sr-only">Twitter</span>
                <i class="text-2xl devicon-twitter-original"></i>
              </a>
            </div>
          </div>
        </div>

        <div
          class="rounded-lg border border-neutral-200 p-6 dark:border-neutral-800"
        >
          <form class="space-y-4">
            <div class="grid gap-4 sm:grid-cols-2">
              <div>
                <label for="name" class="block text-sm font-medium mb-1"
                  >Name</label
                >
                <input
                  type="text"
                  id="name"
                  placeholder="Your name"
                  class="w-full rounded-md border border-neutral-300 bg-white px-3 py-2 text-neutral-900 placeholder:text-neutral-500 focus:border-blue-500 focus:outline-none dark:border-neutral-700 dark:bg-neutral-900 dark:text-white dark:placeholder:text-neutral-400 dark:focus:border-blue-400"
                  required
                />
              </div>

              <div>
                <label for="email" class="block text-sm font-medium mb-1"
                  >Email</label
                >
                <input
                  type="email"
                  id="email"
                  placeholder="Your email address"
                  class="w-full rounded-md border border-neutral-300 bg-white px-3 py-2 text-neutral-900 placeholder:text-neutral-500 focus:border-blue-500 focus:outline-none dark:border-neutral-700 dark:bg-neutral-900 dark:text-white dark:placeholder:text-neutral-400 dark:focus:border-blue-400"
                  required
                />
              </div>
            </div>

            <div>
              <label for="subject" class="block text-sm font-medium mb-1"
                >Subject</label
              >
              <input
                type="text"
                id="subject"
                placeholder="What is this regarding?"
                class="w-full rounded-md border border-neutral-300 bg-white px-3 py-2 text-neutral-900 placeholder:text-neutral-500 focus:border-blue-500 focus:outline-none dark:border-neutral-700 dark:bg-neutral-900 dark:text-white dark:placeholder:text-neutral-400 dark:focus:border-blue-400"
                required
              />
            </div>

            <div>
              <label for="message" class="block text-sm font-medium mb-1"
                >Message</label
              >
              <textarea
                id="message"
                rows="5"
                placeholder="Your message"
                class="w-full rounded-md border border-neutral-300 bg-white px-3 py-2 text-neutral-900 placeholder:text-neutral-500 focus:border-blue-500 focus:outline-none dark:border-neutral-700 dark:bg-neutral-900 dark:text-white dark:placeholder:text-neutral-400 dark:focus:border-blue-400"
                required></textarea>
            </div>

            <button type="submit" class="btn btn-primary w-full">
              Send Message
            </button>

            <p class="text-xs text-neutral-500 dark:text-neutral-400 mt-2">
              By submitting this form, you agree to our privacy policy and terms
              of service.
            </p>
          </form>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>
